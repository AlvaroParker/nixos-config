[
  {
    "bindings": {
      "ctrl-p": "menu::SelectPrevious",
      "ctrl-shift-enter": "terminal_panel::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-t": "workspace::NewTerminal",
      "ctrl-shift-backspace": "workspace::ToggleZoom"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      // "g c": "project_panel::DeployContextMenu"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space k r": "repl::Run",
      "space m": "editor::ToggleMinimap",
      "space f": "project_panel::ToggleFocus",
      "space g": "git_panel::ToggleFocus",
      "space g s": "git::StashAll",
      "space s": "git::ViewStash",
      "space g p": "git::StashPop",
      "space o": "outline_panel::ToggleFocus",
      "ctrl-shift-t": "workspace::NewTerminal",
      "space b": "workspace::ToggleLeftDock",
      "space p": "workspace::ToggleRightDock",
      "space enter": "workspace::ToggleBottomDock",
      "ctrl-shift-l": ["workspace::SendKeystrokes", "5 ctrl-w >"],
      "ctrl-shift-h": ["workspace::SendKeystrokes", "5 ctrl-w <"],
      "ctrl-shift-j": ["workspace::SendKeystrokes", "5 ctrl-w -"],
      "ctrl-shift-k": ["workspace::SendKeystrokes", "5 ctrl-w +"],
      "space a": "assistant::InlineAssist",

      "shift-alt-k": "editor::AddSelectionAbove", // Insert Cursor Above
      "shift-alt-j": "editor::AddSelectionBelow", // Insert Cursor Below

      "ctrl-shift-backspace": "workspace::ToggleZoom"
      // "ctrl-w ctrl-h": [
      //   "workspace::SendKeystrokes",
      //   "ctrl-shift-backspace ctrl-w h ctrl-shift-backspace"
      // ],
      // "ctrl-w ctrl-l": [
      //   "workspace::SendKeystrokes",
      //   "ctrl-shift-backspace ctrl-w l ctrl-shift-backspace"
      // ]
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "space a": "assistant::InlineAssist"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-\\": "pane::SplitAndMoveRight"
    }
  },
  {
    "context": "Editor && VimControl",
    "bindings": {
      "g c": "editor::OpenContextMenu",
      "space t": "tab_switcher::ToggleAll",
      "space d": "editor::ToggleSelectedDiffHunks"
    }
  },
  {
    "context": "OutlinePanel && not_editing",
    "bindings": {
      "enter": "outline_panel::OpenSelectedEntry"
    }
  },
  {
    "context": "OutlinePanel && !not_editing",
    "bindings": {
      "enter": ["workspace::SendKeystrokes", "tab"]
    }
  },
  {
    "context": "vim_mode == visual"
  },
  {
    "context": "Editor && vim_mode == visual || vim_mode == normal",
    "bindings": {
      "space /": "editor::ToggleComments"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-k l": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],
      "ctrl-k h": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],
      "ctrl-k j": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ],
      "ctrl-k k": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w j": "workspace::ActivatePaneDown",
      "ctrl-w k": "workspace::ActivatePaneUp"
    }
  },
  {
    "context": "MessageEditor > Editor && VimControl",
    "bindings": {
      "space a": "agent::ToggleContextPicker",
      "space m": "agent::ToggleModelSelector",
      "space t": "agent::ToggleProfileSelector"
    }
  },
  {
    "context": "StashDiff > Editor",
    "bindings": {
      "ctrl-shift-d": "git::DropCurrentStash"
    }
  }
]
